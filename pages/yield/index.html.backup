<!-- 個人成績セクション -->
<section class="yield-block" id="personal-performance">
  <header class="yield-block-header">
    <h2 class="yield-block-title">個人成績</h2>
  </header>
  
  <!-- 1. 今日の実績 -->
  <div class="yield-subsection" id="daily-performance">
    <h3 class="yield-subsection-title">今日の実績</h3>
    <div class="kpi-v2-row">
      <div class="kpi-v2-card">
        <div class="kpi-v2-label">提案数</div>
        <div class="kpi-v2-value-wrapper">
          <span class="kpi-v2-value" id="dailyProposals">3</span>
          <span class="kpi-v2-target-separator">/</span>
          <input type="number" class="kpi-v2-target-input" id="dailyProposalsTarget" value="5" min="0">
        </div>
        <div class="kpi-v2-progress" id="dailyProposalsProgress">60%</div>
      </div>
      <div class="kpi-v2-card">
        <div class="kpi-v2-label">推薦数</div>
        <div class="kpi-v2-value-wrapper">
          <span class="kpi-v2-value" id="dailyRecommendations">2</span>
          <span class="kpi-v2-target-separator">/</span>
          <input type="number" class="kpi-v2-target-input" id="dailyRecommendationsTarget" value="4" min="0">
        </div>
        <div class="kpi-v2-progress" id="dailyRecommendationsProgress">50%</div>
      </div>
      <div class="kpi-v2-card">
        <div class="kpi-v2-label">面談設定数</div>
        <div class="kpi-v2-value-wrapper">
          <span class="kpi-v2-value" id="dailyInterviews">1</span>
          <span class="kpi-v2-target-separator">/</span>
          <input type="number" class="kpi-v2-target-input" id="dailyInterviewsTarget" value="3" min="0">
        </div>
        <div class="kpi-v2-progress" id="dailyInterviewsProgress">33%</div>
      </div>
      <div class="kpi-v2-card">
        <div class="kpi-v2-label">内定数</div>
        <div class="kpi-v2-value-wrapper">
          <span class="kpi-v2-value" id="dailyOffers">1</span>
          <span class="kpi-v2-target-separator">/</span>
          <input type="number" class="kpi-v2-target-input" id="dailyOffersTarget" value="2" min="0">
        </div>
        <div class="kpi-v2-progress" id="dailyOffersProgress">50%</div>
      </div>
    </div>
  </div>

